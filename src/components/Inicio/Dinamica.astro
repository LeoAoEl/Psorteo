---
import { Image } from "astro:assets";
import Dimage from "@assets/loteria.avif";
import { dinamica } from "@constants/pasosBoletos";

const { title, description } = dinamica;
---

<div class="flex md:flex-row flex-col items-center bg-primary rounded-xl p-4">
  <div class="flex justify-center items-center md:w-1/4">
    <Image src={Dimage} alt="Loteria" class="w-[25vh] rounded-xl" />
  </div>
  <div class="flex flex-col items-center justify-center gap-4 md:w-3/4">
    <span class="text-3xl md:text-4xl font-bold text-slate-800 text-center"
      >{title}</span
    >
    <span class="prose-lg">{description}</span>
  </div>
</div>
