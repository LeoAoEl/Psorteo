---
import Layout from "@layouts/Layout.astro";
import Container from "@components/shared/Container.astro";
import PrizesCarousel from "@components/sorteo/PrizesCarousel";
import SorteoForm from "@components/sorteo/SorteoForm";
import { seoConfig } from "@constants/SEO";
import { prizes } from "@constants/exito/prizes";

const { title, description, keywords } = seoConfig.sorteo;
---

<Layout title={title} description={description} keywords={keywords}>
  <Container>
    <div class="flex flex-col justify-center items-center text-center pb-4">
      <span class="text-3xl md:text-4xl text-primary font-bold uppercase"
        >Elije una opci√≥n
      </span>
    </div>

    <div class="flex flex-col md:flex-row gap-6 items-center justify-center">
      <SorteoForm client:visible />
    </div>

    <div>
      <PrizesCarousel items={prizes} client:visible />
    </div>
  </Container>
</Layout>
