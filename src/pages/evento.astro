---
import Layout from "@layouts/Layout.astro";
import Container from "@components/shared/Container.astro";
import { Icon } from "astro-icon/components";
import { ticket } from "@constants/evento/ticket";
---

<Layout>
  <Container>
    <div class="flex flex-col justify-center items-center mb-4">
      <span class="text-4xl text-primary font-bold uppercase"
        >Elije una opci√≥n
      </span>
    </div>

    <main
      class="grid grid-cols-1 md:grid-cols-2 mt-10 lg:grid-cols-3 items-center justify-center gap-6"
    >
      {
        ticket.map((item) => (
          <div class="flex flex-col justify-center items-center p-4 bg-primary text-black shadow-lg rounded-lg hover:scale-105 transition-all ease-in  cursor-pointer">
            <div class="flex flex-row justify-center items-center">
              <Icon name="right" size={24} />
              <span class="text-lg md:text-2xl text-black font-bold uppercase md:mr-4">
                {item.number} Numeros
              </span>
              <Icon name="ticketBlack" size={24} />
              <span class="text-lg text-black">{item.price}</span>
            </div>
          </div>
        ))
      }
    </main>
  </Container>
</Layout>
