---
import Layout from "@layouts/Layout.astro";
import Container from "@components/shared/Container.astro";
import { seoConfig } from "@constants/SEO";
import CreditCard from "@components/pago/CreditCard";
import { Transferencia, Deposito } from "@constants/pago/MetodoPago";
const { title, description, keywords } = seoConfig.pago;
---

<Layout title={title} description={description} keywords={keywords}>
  <Container>
    <div class="flex flex-col justify-center items-center text-center pb-4">
      <span class="text-3xl md:text-4xl text-primary font-bold uppercase"
        >Metodos de pago
      </span>
    </div>

    <div class="py-4">
      <div class="py-4 flex">
        <span class="text-2xl md:text-3xl text-primary text-center md:text-left"
          >Transferencia Bancaria (en concepto o referenica poner tu nombre)
        </span>
      </div>
      <div
        class="flex flex-col md:flex-row gap-8 items-center justify-evenly py-4"
      >
        {
          Transferencia.map((objeto) => (
            <CreditCard {...objeto} client:visible />
          ))
        }
      </div>
    </div>

    <div class="py-4">
      <div class="py-4 flex">
        <span
          class="text-2xl md:text-3xl text-primary py-8 md:py-4 text-center md:text-left"
          >Depositos en efectivo ( desde cualquier oxxo, super, banco, etc)
        </span>
      </div>
      <div class="flex flex-col md:flex-row gap-8 items-center justify-evenly">
        {Deposito.map((objeto) => <CreditCard {...objeto} client:visible />)}
      </div>
    </div>
  </Container>
</Layout>
