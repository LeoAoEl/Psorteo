---
import Layout from "@layouts/Layout.astro";
import Container from "@components/shared/Container.astro";
import PagoAcordion from "@components/pago/PagoAcordion";
import { seoConfig } from "@constants/SEO";
const { title, description, keywords } = seoConfig.pago;
---

<Layout title={title} description={description} keywords={keywords}>
  <Container>
    <div class="flex flex-col justify-center items-center mb-4 text-center">
      <span class="text-4xl text-primary font-bold uppercase"
        >Metodos de pago
      </span>
    </div>
    <PagoAcordion client:visible />
  </Container>
</Layout>
