---
import Layout from "@layouts/Layout.astro";
import HeroSwipper from "@components/Inicio/HeroSwipper";
import { hero } from "@constants/homeSlider";
import SmallBanner from "@components/Inicio/SmallBanner.astro";
import BoletosButtons from "@components/Inicio/BoletosButtons.astro";
import Steps from "@components/Inicio/Steps.astro";
import Steps2 from "@components/Inicio/Steps2.astro";
import Exito from "@components/Inicio/Exito.astro";
import BannerBottom from "@components/Inicio/BannerBottom.astro";
import Acordion from "@components/Inicio/Acordion";
import { seoConfig } from "@constants/SEO";

const { title, description, keywords } = seoConfig.inicio;
---

<Layout title={title} description={description} keywords={keywords}>
  <SmallBanner />
  <HeroSwipper slides={hero} client:load />
  <BoletosButtons />
  <Steps />
  <Steps2 />
  <Exito />
  <Acordion client:visible />
  <BannerBottom />
</Layout>
